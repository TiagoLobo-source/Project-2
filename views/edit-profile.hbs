<div id="form">
  <h2>Edit Profile</h2>

  <form action="/userProfile/edit" method="POST">

    <label>
      Name
      <input
        type="firstName"
        value="{{firstName}}"
        name="firstname"
        placeholder="Omar"
      />
    </label>

    <label>Password
      <input type="password" name="password" placeholder="Type your password" />
    </label>

    <button type="submit">Login</button>
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}

  </form>
</div>