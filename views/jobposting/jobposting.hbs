    <form action="/main/postjob" method="POST" style="margin: 0 30% 0 30%;">
      <div class="container">
        <header class="d-flex flex-wrap align-items-center justify-content-md-start py-3 mb-1 border-bottom">
          <div class="container">
            <h1 class="mt-4 mb-4">Job Post</h1>
        </div>
        </header>
        <div class="form-group">
        <label for="exampleFormControlInput1">Company Name</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Company Name" name="companyName" value="{{companyName}}">

      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">Title</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Nurse, Doctor, Software Developer" name="title" value="{{title}}">

      </div>
      <div class="form-group">
        <label for="exampleFormControlTextarea1">Job description</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="description" value="{{description}}"></textarea>
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">Job Location</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" name="location" placeholder="Phoenix-Arizona-United Sates, Lisbon-Portugal"  value="{{location}}">
      </div>
      
      <div class="form-group">
        <label for="exampleFormControlInput1">Industry</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" name="industry" placeholder="Industry" value="{{industry}}">
      </div>
     <div class="form-group">
    <label for="exampleFormControlInput1" >Contract type</label>
<select class="form-control" id="exampleFormControlSelect1" name="contractType" >
    <option value="" disabled selected>Select an option</option>
    <option value="Full-time">Full-time</option>
    <option value="Part-time" >Part-time</option>
    <option value="Contract" >Contract</option>
    <option value="Freelance" >Freelance</option>
</select>


</div>
          <div class="form-group">
        <label for="exampleFormControlInput1">Salary</label>
        <input type="text" class="form-control" id="exampleFormControlInput1" name="salary" placeholder="50.000$-100.000$" value="{{salary}}">
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">Responsibilities</label>
        <input type="text" class="form-control" id="exampleFormControlInput1"  name="responsibilities" placeholder="Responsibilities" value="{{responsibilities}}">
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">Qualifications</label>
        <input type="text" class="form-control" id="exampleFormControlInput1"  name="qualifications" placeholder="Qualifications" value="{{qualifications}}">
      </div>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end mb-4">
        <button type="submit" style=" border-radius:30px; font-size:16px; color:white; border:none; text-transform: uppercase;background-color:#8F00FF;" class="btn btn-primary btn-lg px-4 me-md-2">SAVE DETAILS</button>
      </div>
      {{#if errorMessage}}
          <p class="error">{{errorMessage}}</p>
        {{/if}}
    </form>
    
    
